{
  "name": "pug-webextension",
  "version": "1.0.0",
  "manifest_version": 2,
  "permissions": [
    "<all_urls>",
    "activeTab",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "https://www.red-wheelbarrow.com/forkids/*",
    "https://www.whatismybrowser.com/detect/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["content-script.js"]
   }
 ]
}
